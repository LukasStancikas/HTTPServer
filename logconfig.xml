<?xml version="1.0" encoding="utf-8" ?>
<log4net >
 
  <appender name="FileInfoAppender" type="log4net.Appender.FileAppender">
    <file>C:/HTTPLogging/HttpServerLog.txt</file>
    <appendToFile>true</appendToFile>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date Thread: [%thread] Level: %-5level - %message%newline" />
    </layout>
  </appender>

  <appender name="FileErrorAppender" type="log4net.Appender.FileAppender">
    <file>C:/HTTPLogging/HttpServerLog.txt</file>
    <appendToFile>true</appendToFile>
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date Thread: [%thread] Level: %-5level - %message%newline" />
    </layout>
  </appender>


  <root>
    <level value="ALL" />
    <!--level value="Warn" /-->
    <appender-ref ref="FileInfoAppender" />
    <appender-ref ref="FileErrorAppender" />
  </root>
</log4net>